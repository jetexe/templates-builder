{
    "name": "{%org_name%}/{%repo_name%}",
    "description": "Some package description goes here",
    "keywords": [
        "some",
        "keywords",
        "goes",
        "here"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "{%org_name%}",
            "homepage": "https://github.com/{%org_name%}"
        }
    ],
    "require": {
        "php": "^5.6 || >=7.0 <7.3",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7 || ^6.4",
        "symfony/var-dumper": "~3.3 || ^3.4"
    },
    "autoload": {
        "psr-4": {
            "{%root_namespace%}\\{%package_namespace%}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{%root_namespace%}\\{%package_namespace%}\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --no-coverage"
    },
    "support": {
        "issues": "https://github.com/{%org_name%}/{%repo_name%}/issues",
        "source": "https://github.com/{%org_name%}/{%repo_name%}"
    }
}
